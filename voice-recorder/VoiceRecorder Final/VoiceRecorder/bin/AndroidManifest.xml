<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
   package="com.deitel.voicerecorder" android:versionCode="1"
   android:versionName="1.0">
   <application android:icon="@drawable/icon2" 
      android:label="@string/app_name" >
      <activity android:name=".VoiceRecorder" 
         android:label="@string/app_name" 
         android:screenOrientation="portrait">
         <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
         </intent-filter>
      </activity>
      <activity android:name=".SavedRecordings"
         android:label="@string/app_name"
         android:screenOrientation="portrait">
      </activity>
       <activity
            android:label="Settings"
            android:launchMode="singleTop"
            android:name="Recorder_preferences"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
   </application>
   <uses-permission android:name="android.permission.RECORD_AUDIO"/>
   <uses-permission 
      android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
   <uses-sdk android:targetSdkVersion="11" android:minSdkVersion="10"/>
</manifest> 

